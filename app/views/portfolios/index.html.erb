  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-3xl text-gray-900">My Portfolios</h1>
    <%= link_to "New Portfolio", new_portfolio_path, class: "bg-indigo-600 text-white rounded-md px-6 py-3 hover:bg-indigo-700 font-semibold shadow-md hover:shadow-lg transition" %>
  </div>

  <% if @portfolios.empty? %>
    <div class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl shadow-lg p-16 text-center border border-indigo-100">
      <div class="mb-6">
        <svg class="w-24 h-24 mx-auto text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
      <h2 class="text-3xl font-bold text-gray-900 mb-3">Start Your Investment Journey</h2>
      <p class="text-gray-600 mb-2 max-w-md mx-auto text-lg">
        Create your first portfolio to track stocks, precious metals, forex, and crypto
      </p>
      <p class="text-gray-500 mb-8 max-w-lg mx-auto">
        Get real-time analytics, AI-powered insights, and comprehensive performance tracking all in one place
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <%= link_to new_portfolio_path, class: "bg-indigo-600 text-white rounded-lg px-8 py-4 hover:bg-indigo-700 font-semibold shadow-lg hover:shadow-xl transition transform hover:-translate-y-0.5 flex items-center space-x-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>Create Your First Portfolio</span>
        <% end %>
      </div>

      <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 max-w-3xl mx-auto">
        <div class="text-center">
          <div class="bg-white rounded-lg p-4 shadow-sm mb-2">
            <span class="text-2xl">ðŸ“ˆ</span>
          </div>
          <p class="text-sm font-medium text-gray-700">Multi-Asset Support</p>
          <p class="text-xs text-gray-500 mt-1">Stocks, Gold, Forex & Crypto</p>
        </div>
        <div class="text-center">
          <div class="bg-white rounded-lg p-4 shadow-sm mb-2">
            <span class="text-2xl">ðŸ¤–</span>
          </div>
          <p class="text-sm font-medium text-gray-700">AI-Powered Insights</p>
          <p class="text-xs text-gray-500 mt-1">Get smart recommendations</p>
        </div>
        <div class="text-center">
          <div class="bg-white rounded-lg p-4 shadow-sm mb-2">
            <span class="text-2xl">ðŸ“Š</span>
          </div>
          <p class="text-sm font-medium text-gray-700">Real-Time Analytics</p>
          <p class="text-xs text-gray-500 mt-1">Track performance live</p>
        </div>
      </div>
    </div>
  <% else %>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @portfolios.each do |portfolio| %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= portfolio.name %></h3>
          <p class="text-gray-600 mb-4 line-clamp-2"><%= portfolio.description.presence || "No description" %></p>

          <div class="border-t border-gray-200 pt-4 mt-4">
            <div class="flex justify-between items-center text-sm text-gray-500 mb-4">
              <span>Created <%= time_ago_in_words(portfolio.created_at) %> ago</span>
            </div>

            <div class="flex space-x-2">
              <%= link_to "View", portfolio_path(portfolio), class: "flex-1 text-center bg-indigo-600 text-white rounded-md px-4 py-2 hover:bg-indigo-700 text-sm font-medium" %>
              <%= link_to "Edit", edit_portfolio_path(portfolio), class: "flex-1 text-center bg-gray-200 text-gray-700 rounded-md px-4 py-2 hover:bg-gray-300 text-sm font-medium" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
