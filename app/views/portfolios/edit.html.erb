<div class="max-w-2xl mx-auto">
  <h1 class="font-bold text-3xl text-gray-900 mb-8">Edit Portfolio</h1>

  <div class="bg-white rounded-lg shadow-md p-8">
    <%= render "form", portfolio: @portfolio %>
  </div>

  <div class="mt-6 pt-6 border-t border-gray-200">
    <%= button_to "Delete Portfolio",
        portfolio_path(@portfolio),
        method: :delete,
        data: { confirm: "Are you sure? This will permanently delete this portfolio and all its holdings.", turbo_confirm: "Are you sure? This will permanently delete this portfolio and all its holdings." },
        class: "w-full bg-red-600 text-white rounded-md px-6 py-3 hover:bg-red-700 font-semibold" %>
  </div>
</div>
