<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= @portfolio.name %> - Analytics</h1>
    <p class="text-gray-600 mt-2">Comprehensive portfolio performance and allocation analysis</p>
  </div>

  <!-- Overview Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Value -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-600 mb-1">Total Value</div>
      <div class="text-2xl font-bold text-gray-900">
        <%= number_to_currency(@analytics[:overview][:total_value], unit: @analytics[:overview][:base_currency] + " ") %>
      </div>
    </div>

    <!-- Total Cost -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-600 mb-1">Total Cost</div>
      <div class="text-2xl font-bold text-gray-900">
        <%= number_to_currency(@analytics[:overview][:total_cost], unit: @analytics[:overview][:base_currency] + " ") %>
      </div>
    </div>

    <!-- Profit/Loss -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-600 mb-1">Profit/Loss</div>
      <div class="text-2xl font-bold <%= @analytics[:overview][:total_profit_loss] >= 0 ? 'text-green-600' : 'text-red-600' %>">
        <%= number_to_currency(@analytics[:overview][:total_profit_loss], unit: @analytics[:overview][:base_currency] + " ") %>
      </div>
      <div class="text-sm <%= @analytics[:overview][:total_return_percentage] >= 0 ? 'text-green-600' : 'text-red-600' %>">
        <%= @analytics[:overview][:total_return_percentage] %>%
      </div>
    </div>

    <!-- Diversity Score -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-600 mb-1">Diversity Score</div>
      <div class="text-2xl font-bold text-gray-900">
        <%= @analytics[:metrics][:diversity_score] %>
      </div>
      <div class="text-sm text-gray-600">
        <%= @analytics[:overview][:position_count] %> positions
      </div>
    </div>
  </div>

  <!-- Performance Periods -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Performance by Period</h2>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4">
        <% @analytics[:periods].each do |period, data| %>
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="text-sm font-medium text-gray-600 mb-2"><%= period.to_s.upcase %></div>
            <div class="text-lg font-bold <%= data[:change] >= 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= number_to_currency(data[:change], unit: @analytics[:overview][:base_currency] + " ") %>
            </div>
            <div class="text-sm <%= data[:change_percentage] >= 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= data[:change_percentage] %>%
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Charts Row -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Asset Allocation by Class -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Asset Allocation by Class</h2>
      </div>
      <div class="p-6">
        <%= pie_chart @analytics[:allocation][:by_asset_class].transform_values { |v| v[:percentage] },
            suffix: "%",
            donut: true,
            colors: ["#3b82f6", "#10b981", "#f59e0b", "#ef4444", "#8b5cf6", "#ec4899"] %>
      </div>
    </div>

    <!-- Asset Allocation by Currency -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Asset Allocation by Currency</h2>
      </div>
      <div class="p-6">
        <%= pie_chart @analytics[:allocation][:by_currency].transform_values { |v| v[:percentage] },
            suffix: "%",
            donut: true,
            colors: ["#3b82f6", "#10b981", "#f59e0b", "#ef4444"] %>
      </div>
    </div>
  </div>

  <!-- Portfolio Value Timeline -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Portfolio Value (Last 30 Days)</h2>
    </div>
    <div class="p-6">
      <% timeline_data = @portfolio.analytics.value_timeline(days: 30).map { |t| [t[:date], t[:value]] }.to_h %>
      <%= line_chart timeline_data,
          suffix: " " + @analytics[:overview][:base_currency],
          thousands: ",",
          colors: ["#3b82f6"] %>
    </div>
  </div>

  <!-- Top Performers -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Top Gainers -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Top Performers</h2>
      </div>
      <div class="p-6">
        <% if @analytics[:performance][:top_performers].any? %>
          <div class="space-y-3">
            <% @analytics[:performance][:top_performers].each do |position| %>
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <div>
                  <div class="font-medium text-gray-900"><%= position[:asset_symbol] %></div>
                  <div class="text-sm text-gray-600"><%= position[:asset_name] %></div>
                </div>
                <div class="text-right">
                  <div class="font-medium text-green-600">+<%= position[:profit_loss_percentage] %>%</div>
                  <div class="text-sm text-gray-600">
                    <%= number_to_currency(position[:profit_loss], unit: @analytics[:overview][:base_currency] + " ") %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No profitable positions yet</p>
        <% end %>
      </div>
    </div>

    <!-- Worst Performers -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Worst Performers</h2>
      </div>
      <div class="p-6">
        <% if @analytics[:performance][:worst_performers].any? %>
          <div class="space-y-3">
            <% @analytics[:performance][:worst_performers].each do |position| %>
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <div>
                  <div class="font-medium text-gray-900"><%= position[:asset_symbol] %></div>
                  <div class="text-sm text-gray-600"><%= position[:asset_name] %></div>
                </div>
                <div class="text-right">
                  <div class="font-medium text-red-600"><%= position[:profit_loss_percentage] %>%</div>
                  <div class="text-sm text-gray-600">
                    <%= number_to_currency(position[:profit_loss], unit: @analytics[:overview][:base_currency] + " ") %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No losing positions</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Largest Positions -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Largest Positions</h2>
    </div>
    <div class="p-6">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Asset</th>
              <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Value</th>
              <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Weight</th>
              <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">P/L</th>
              <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">P/L %</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @analytics[:performance][:largest_positions].each do |position| %>
              <tr>
                <td class="px-4 py-3">
                  <div class="font-medium text-gray-900"><%= position[:asset_symbol] %></div>
                  <div class="text-sm text-gray-600"><%= position[:asset_name] %></div>
                </td>
                <td class="px-4 py-3 text-right text-gray-900">
                  <%= number_to_currency(position[:current_value], unit: @analytics[:overview][:base_currency] + " ") %>
                </td>
                <td class="px-4 py-3 text-right text-gray-600">
                  <%= position[:portfolio_weight] %>%
                </td>
                <td class="px-4 py-3 text-right <%= position[:profit_loss] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= number_to_currency(position[:profit_loss], unit: @analytics[:overview][:base_currency] + " ") %>
                </td>
                <td class="px-4 py-3 text-right <%= position[:profit_loss_percentage] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= position[:profit_loss_percentage] %>%
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Back Button -->
  <div class="mt-8">
    <%= link_to "Back to Portfolio", portfolio_path(@portfolio), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
  </div>
</div>
