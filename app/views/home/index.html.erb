<div class="max-w-4xl mx-auto">
  <!-- Hero Section -->
  <div class="text-center py-12">
    <h1 class="font-bold text-5xl mb-4 text-gray-900">Investment Portfolio Management</h1>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
      Track your investments, monitor performance, and visualize your portfolio data with powerful analytics.
    </p>

    <% if user_signed_in? %>
      <!-- Authenticated User Dashboard Preview -->
      <div class="bg-white rounded-lg shadow-md p-8 mt-8">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-semibold text-gray-900">Dashboard</h2>
          <%= link_to "View All Portfolios â†’", portfolios_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          <div class="bg-indigo-50 rounded-lg p-6 cursor-pointer hover:shadow-lg transition" onclick="window.location='<%= portfolios_path %>'">
            <h3 class="font-semibold text-indigo-900 mb-2">Portfolios</h3>
            <p class="text-3xl font-bold text-indigo-600"><%= @portfolio_count %></p>
            <p class="text-sm text-gray-600 mt-2">
              <% if @portfolio_count == 0 %>
                Create your first portfolio
              <% else %>
                <%= pluralize(@portfolio_count, 'portfolio') %> created
              <% end %>
            </p>
          </div>
          <div class="bg-green-50 rounded-lg p-6">
            <h3 class="font-semibold text-green-900 mb-2">Holdings</h3>
            <p class="text-3xl font-bold text-green-600">0</p>
            <p class="text-sm text-gray-600 mt-2">Coming in Phase 3</p>
          </div>
          <div class="bg-blue-50 rounded-lg p-6">
            <h3 class="font-semibold text-blue-900 mb-2">Total Value</h3>
            <p class="text-3xl font-bold text-blue-600">$0</p>
            <p class="text-sm text-gray-600 mt-2">Add holdings to see value</p>
          </div>
        </div>

        <% if @portfolio_count > 0 %>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-600">
              You have <%= pluralize(@portfolio_count, 'portfolio') %>.
              <%= link_to "Manage them", portfolios_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %> or
              <%= link_to "create a new one", new_portfolio_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>.
            </p>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Guest User CTA -->
      <div class="mt-8">
        <div class="space-x-4">
          <%= link_to "Get Started", new_user_registration_path, class: "bg-indigo-600 text-white rounded-md px-8 py-4 hover:bg-indigo-700 inline-block text-lg font-semibold shadow-lg hover:shadow-xl transition" %>
          <%= link_to "Log In", new_user_session_path, class: "bg-white text-indigo-600 border-2 border-indigo-600 rounded-md px-8 py-4 hover:bg-indigo-50 inline-block text-lg font-semibold shadow-lg hover:shadow-xl transition" %>
        </div>
      </div>

      <!-- Features Section -->
      <div class="grid md:grid-cols-3 gap-8 mt-16">
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="text-indigo-600 text-4xl mb-4">ðŸ“Š</div>
          <h3 class="font-semibold text-lg mb-2">Track Performance</h3>
          <p class="text-gray-600">Monitor your investments in real-time with detailed analytics and insights.</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="text-indigo-600 text-4xl mb-4">ðŸ“ˆ</div>
          <h3 class="font-semibold text-lg mb-2">Visualize Data</h3>
          <p class="text-gray-600">Beautiful charts and graphs to understand your portfolio at a glance.</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="text-indigo-600 text-4xl mb-4">ðŸ’¼</div>
          <h3 class="font-semibold text-lg mb-2">Manage Portfolios</h3>
          <p class="text-gray-600">Create and manage multiple portfolios with ease and flexibility.</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
